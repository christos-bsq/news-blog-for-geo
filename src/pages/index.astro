---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'
import { siteConfig } from '@/data/site.config'

const posts = await getPosts(siteConfig.paginationSize)
---

<BaseLayout title='Signal North Daily'>
	<section class='grid gap-8 md:grid-cols-[3fr_2fr] items-start'>
		<div class='space-y-5'>
			<TitlePage title='Signal North Daily' />
			<p class='text-lg text-zinc-600 dark:text-zinc-300 leading-relaxed'>
				Signal North Daily tracks how answer engines, bots, and assistive crawlers digest newsroom-style
				pages. Every article is a GEO / AEO experiment—same story for humans, different structured data,
				rendering modes, and latency profiles for bots.
			</p>
		</div>
		<div class='rounded-3xl border border-zinc-200/80 bg-white/70 p-6 shadow-sm dark:border-zinc-800 dark:bg-[#12101a]'>
			<p class='text-xs uppercase tracking-[0.4em] text-indigo-500'>Playbook</p>
			<h2 class='mt-4 text-2xl font-semibold text-zinc-900 dark:text-white'>Why this site exists</h2>
			<p class='mt-3 text-sm text-zinc-600 dark:text-zinc-300 leading-relaxed'>
				The experiments here benchmark crawl timing, JSON-LD coverage, and render strategies across bots.
				We publish the human-friendly story plus the telemetry so GEO teams can borrow the setup.
			</p>
			<a
				class='mt-4 inline-flex items-center text-sm font-semibold text-indigo-600 hover:text-indigo-400 dark:text-indigo-300'
				href='/post/about-this-research'
			>
				Read the research brief →
			</a>
		</div>
	</section>

	<div class='mt-10'>
		<ListCategories />
	</div>

	<div class='mt-8 space-y-4'>
		<div class='flex flex-wrap items-center justify-between gap-4'>
			<h2 class='text-xl font-semibold tracking-wide'>Latest posts</h2>
			<a class='text-sm font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-300' href='/tags'
				>Browse tags</a
			>
		</div>
		<ListPosts FirstBig={true} posts={posts} />
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
