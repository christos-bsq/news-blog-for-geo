---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/lib/siteConfig";

interface Props {
  title?: string;
  description?: string;
  image?: string | null;
  canonical?: string | null;
  indexable?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = null,
  canonical = null,
  indexable = true,
} = Astro.props as Props;
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      indexable={indexable}
    />
    <slot name="head" />
  </head>
  <body class="flex flex-col max-w-4xl min-h-screen px-6 md:px-8 mx-auto bg-white text-base-900">
    <Navigation />
    <main class="flex-grow py-10 md:py-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>
