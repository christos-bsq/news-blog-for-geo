---
interface Props {
  src?: string | null;
  alt?: string | null;
}

const { src, alt } = Astro.props;
const showImage = Boolean(src);
---
{showImage && (
  <figure class="overflow-hidden rounded-3xl border border-base-200 bg-base-50">
    <img src={src!} alt={alt ?? ''} class="h-auto w-full object-cover" loading="lazy" />
  </figure>
)}
