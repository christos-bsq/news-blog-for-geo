---
import type { CollectionEntry } from "astro:content";
import { format } from "@/utils/date";
import { getPostSlug } from "@/lib/postHelpers";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { data } = post;
const slug = getPostSlug(post);
---
<a
  href={`/post/${slug}`}
  class="group flex flex-col rounded-3xl border border-base-200 bg-white/70 p-6 shadow-sm transition hover:-translate-y-1 hover:border-blue-200 hover:bg-white"
>
  <div class="flex items-center justify-between text-xs font-medium uppercase tracking-[0.35em] text-base-500">
    <span>{data.category}</span>
    <span>{format(data.date)}</span>
  </div>
  <h3 class="mt-4 text-2xl font-semibold text-base-900 group-hover:text-blue-600">{data.title}</h3>
  <p class="mt-3 text-base text-base-600">{data.description}</p>
  <div class="mt-4 flex flex-wrap gap-2 text-xs text-base-500">
    {data.tags?.map((tag) => (
      <span class="rounded-full border border-base-200 bg-base-50 px-3 py-1" aria-label={`Tag ${tag}`}>
        #{tag}
      </span>
    ))}
  </div>
</a>
